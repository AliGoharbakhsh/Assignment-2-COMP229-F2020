<%- include('../partials/header.ejs')  -%>
<%- include('../partials/main_nav.ejs')  -%>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="from-group">
                    <label for="nameTextField">Name Contact</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter The Name of Contact"
                   <% if ( title =='Add Contact'){ %>
                    name="name" required>
                    <% } else { %>
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                  <%  } %>
                </div>
                <br>
                <div class="from-group">
                    <label for="EmailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="EmailTextField"
                    placeholder="Enter The Email of Contact "
                   <% if ( title =='Add Contact'){ %>
                    name="Email" required>
                    <% } else { %>
                    name="Email" 
                    value="<%= contact.Email %>"
                    required>
                  <%  } %>
                </div>
                <br>
                <div class="from-group">
                    <label for="phoneTextField">Phone</label>
                    <input type="text" class="form-control"
                    id="phoneTextField"
                    placeholder="Enter the Phone of Contact"
                    
                    <% if ( title =='Add Contact'){ %>
                    name="phone" required>
                    <% } else { %>
                   name="phone" 
                    value="<%= contact.phone %>"
                    required>
                  <%  } %>


                </div>
                <br>
                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>
    </div>
</div>

<%- include('../partials/bottom_nav.ejs')  -%>
<%- include('../partials/footer.ejs')  -%>